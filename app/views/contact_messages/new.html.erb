<% content_for :hero do %>
<div class="hero inner-page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="intro">
          <h2>Contact us<span class="tblue">.</span></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="contact">
  <div class="container">
    <div class="row"><br>
      <div class="col-lg-6">
        <h3>Matthias Friedrich Bergsteiner</h3>
        <h4>PernerstorferstraÃŸe 65</h4>
        <h4>2700, Wiener Neustadt</h4><br>
        <h4>matthidas.bergsteiner@gmail.com</h4>      
      </div>
    </div>
    <div class="row">
      <div class="col-md4 col-md-offset4">
        <div class="formdetails well">
          <%= form_for ContactMessage.new, html: { class: "form-horizontal", role: "form" } do |f| %>
            <fieldset>
              <legend>What can we do for you?</legend>
              <div class="form-group">
                <%= f.label :email, class: "col-lg-offset-1 col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.email_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :name, class: "col-lg-offset-1 col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :message, class: "col-lg-offset-1 col-lg-2 control-label" %>
                <div class="col-lg-6">
                  <%= f.text_area :message, class: "form-control", rows: 6 %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-offset-5 col-lg-9">
                  <%= f.submit "Send message", class: "btn btn-primary" %>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>