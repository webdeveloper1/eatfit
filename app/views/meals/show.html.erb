<% content_for :hero do %>
<div class="hero inner-page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="intro">
          <h2>Meal<span class="tblue">.</span></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<div class="blog">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-8">
        <div class="posts">


          <div class="post-meta">
            <i class="icon-calendar"></i> <%= @meal.created_at.strftime("%d.%m. - %H:%M") %>
            <i class="icon-user"></i> <%= link_to @meal.user.username, user_path(@meal.user.username) %>
            <span class="pull-right">
              <i class="icon-comment"></i><%= link_to pluralize(@comments.count, "Comment"), @meal %>
            </span>
          </div>
          <div class="post-content">
            <%= image_tag @meal.picture, class: "img-responsive", size: "600" %>
          </div>
          <% if @meal.user_id == current_user.id %>
            <%= link_to "Delete Meal", meal_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
          <% end %>
          <hr>

           <!-- Comments Starts -->
           <!-- Comment section -->

            <div class="comments">

                  <div class="title"><h5><%= pluralize(@comments.count, "Comment") %></h5></div>

                  <ul class="comment-list">
                    <% @comments.each do |comment| %>
                      <li class="comment">
                        <a class="pull-left" href="#">
                          <% if comment.user.avatar.present? %>
                            <%= image_tag comment.user.avatar, class: "avatar", size: "64" %>
                          <% else %>
                            <%= image_tag "avatar2.png", class: "avatar", size: "64" %>
                          <% end %>
                        </a>
                          <div class="comment-author"><%= link_to comment.user.username, user_path(comment.user.username) %>
                          <div class="cmeta">Commented on <%= comment.created_at.strftime("%d.%m.-%H:%M") %></div>
                          <p><%= comment.content %></p>
                          <div class="clearfix"></div>
                      </li>
                    <% end %>
                  </ul>
            </div>

            <!-- Comment posting -->

            <div class="respond well">
               <div class="title">
                 <h4>Post Reply</h4>
                 <hr>
               </div>

               <div class="form">
                 <%= form_for [@meal, Comment.new], html: { class: "form-horizontal", role: "form"} do |f| %>
                     <div class="form-group">
                       <%= f.label :content, "Comment", class: "control-label col-md-2" %>
                       <div class="col-md-10">
                         <div class="controls">
                           <%= f.text_area :content, class: "form-control", rows: 3 %>
                         </div>
                       </div>
                     </div>

                     <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                         <%= f.submit "Submit", class: "btn btn-primary" %>
                       </div>
                     </div>
                  <% end %>
               </div>
            </div>

           <!-- Comments Ends -->
        </div>
      </div>
    </div>
  </div>
</div>